<% layout('./layouts/boilerplate.ejs') -%>

    <body>

        <div class="row offset-2">
            <div class="col-8">
                <br>
                <h3>Create a new listing</h3>



                <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" required name="listings[title]" placeholder="enter title" id="title"
                            class="form-control">
                        <div class="valid-feedback">Title looks good!</div>
                        <div class="invalid-feedback">Please enter valid title!</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea rows="3" cols="30" required name="listings[description]" id="description"
                            placeholder="enter description" id="description" class="form-control"></textarea>
                        <div class="valid-feedback">Description looks good!</div>
                        <div class="invalid-feedback">Please enter shorter Description!</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload listing image</label>
                        <input required type="file" name="listings[image]" id="image"
                            class="form-control">
                            <div class="valid-feedback">Image looks good!</div>
                            <div class="invalid-feedback">Please choose valid image!</div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" required name="listings[price]" placeholder="enter price" id="price"
                                class="form-control">
                            <div class="valid-feedback">Price looks good!</div>
                            <div class="invalid-feedback">Please enter valid price!</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">country</label>
                            <input type="text" required name="listings[country]" placeholder="enter country"
                                id="country" class="form-control">
                            <div class="valid-feedback">country looks good!</div>
                            <div class="invalid-feedback">Please enter valid country!</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" required name="listings[location]" placeholder="enter location" id="location"
                            class="form-control">
                        <div class="valid-feedback">Location looks good!</div>
                        <div class="invalid-feedback">Please enter valid Location!</div>
                    </div>

                    <button class="btn btn-dark add-btn">Add</button>
                    <br><br>
                </form>
            </div>
        </div>
    </body>