<% layout('./layouts/boilerplate.ejs') -%>
<body>
    <div class="row offset-2">
        <div class="col-8">
            <br>
           <h3>Edit Listing</h3>
        

    
    <form method="post" action="/listings/<%= list._id %>?_method=put"  class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" required id="title" name="listings[title]" value="<%= list.title %>" class="form-control">
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Please enter valid title!</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea rows="7"  required cols="30" name="listings[description]" id="description" class="form-control"><%= list.description %></textarea>
            <div class="valid-feedback">Description looks good!</div>
            <div class="invalid-feedback">Please enter shorter Description!</div>
        </div>
        <div class="mb-3">
            Original Image <br>
            <img src="<%= originalUrl%>" alt="">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload image</label>
            <input type="file" name="listings[image]"  class="form-control">
            <!-- <div class="valid-feedback">Image looks good!</div>
            <div class="invalid-feedback">Please enter valid Image!</div> -->
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input  type="number" required name="listings[price]" value="<%= list.price %>" class="form-control">
                <div class="valid-feedback">Price looks good!</div>
                <div class="invalid-feedback">Please enter valid price!</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">country</label>
                <input type="text" required name="listings[country]" value="<%= list.country %>" class="form-control">
                <div class="valid-feedback">country looks good!</div>
                <div class="invalid-feedback">Please enter valid country!</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" required name="listings[location]" value="<%= list.location %>" class="form-control">
            <div class="valid-feedback">Location looks good!</div>
            <div class="invalid-feedback">Please enter valid Location!</div>
        </div>
        <button class="btn btn-dark edit-btn">Edit</button>
        <br><br>
    </form>
</div>
</div>
</body>
