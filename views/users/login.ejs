<% layout('./layouts/boilerplate.ejs') -%>

    <div class="row offset-2">
        <h1 class="col-6 offset-2">Login</h1>
        <div class="col-6 offset-2">
            <form action="/login" method="post" class="needs-validation" novalidate>
                <div class="mb-3 mt-2">
                    <label for="username" class="form-label"><b>Username</b></label>
                    <input type="text" required name="username" placeholder="enter username" id="username"
                        class="form-control">
                    <div class="valid-feedback">Username looks good!</div>
                    <div class="invalid-feedback">Please enter valid Username!</div>
                </div>
                <div class="mb-3 mt-2">
                    <label for="password" class="form-label"><b>Password</b></label>
                    <input type="password" required name="password" placeholder="enter password" id="password"
                        class="form-control">
                    <div class="valid-feedback">Password looks good!</div>
                    <div class="invalid-feedback">Please enter valid Password!</div>
                </div>
                
                <button class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>